<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PerfilPuntosFragment">


    <TextView
        android:id="@+id/tvpuntosizqperfilpuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:background="@drawable/rectanguloredondeado"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        fab:layout_constraintBottom_toBottomOf="@+id/tvpuntuacionperfilpuntos"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toTopOf="@+id/tvpuntuacionperfilpuntos" />

    <TextView
        android:id="@+id/tvpuntosder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:background="@drawable/rectanguloredondeado"
        android:gravity="center"
        android:text="puntos"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        fab:layout_constraintBottom_toBottomOf="@+id/tvpuntuacionperfilpuntos"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintTop_toTopOf="@+id/tvpuntuacionperfilpuntos" />

    <TextView
        android:id="@+id/tvpuntuacionperfilpuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/circulogrande"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvperfilpuntos"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        fab:layout_constraintBottom_toTopOf="@+id/btncanjear"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toBottomOf="@+id/tvresumen"
        fab:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/btncanjear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="55dp"
        android:background="@color/colorPrimary"
        android:text="Canjear puntos"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvresumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Resumen de Puntos"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toBottomOf="@+id/tvpuntuacionperfilpuntos" />
</androidx.constraintlayout.widget.ConstraintLayout>